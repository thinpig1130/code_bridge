	<insert id="registQuestionM" parameterType="com.itperson.dto.MQuestion">
		<![CDATA[
		INSERT INTO MEMBER (ID, EMAIL, PASSWORD)
		VALUES (#{id}, #{email}, #{password})
		]]>
	</insert>
	
	<insert id="registQuestionS" parameterType="com.itperson.dto.SQuestion">
