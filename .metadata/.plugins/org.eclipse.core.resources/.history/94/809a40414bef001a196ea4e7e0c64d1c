		INSERT INTO MEMBER (ID, EMAIL, PASSWORD)
		VALUES (#{id}, #{email}, #{password})
		]]>
	</insert>
	
	<select id="maxCode" parameterType="String" resultType="String">
		<![CDATA[
		SELECT MAX(CODE)
		FROM VW_QUESTION_LIST
		WHERE SUB_CODE=#{value}
		]]>
	</select>
