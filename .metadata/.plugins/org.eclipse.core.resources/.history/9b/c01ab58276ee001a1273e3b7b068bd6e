<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itperson.dao.FieldDao">
	<resultMap id ="result" type="com.itperson.dto.Field">
		<result property = "code" column = "CODE"/> 
		<result property = "name" column="NAME"/>
	</resultMap>

	<select id="courseList" resultMap="result">
		<![CDATA[
		SELECT CODE, NAME
		FROM COURSE
		]]>
	</select>
	
	<select id="categoryList" resultMap="result">
		<![CDATA[
		SELECT CODE, NAME
		FROM CATEGORY
		]]>
	</select>
	<select id="subCategoryList" resultMap="result">
		<![CDATA[
		SELECT CODE, NAME
		FROM SUB_CATEGORY
		]]>
	</select>
	
	<select id="partOfcategoryList" parameterType="String" resultMap="result">
		<![CDATA[
		SELECT CODE, NAME
		FROM CATEGORY
		WHERE CO_CODE=#{value}
		]]>
	</select>
	
	<select id="partOfsubCategoryList" parameterType="String" resultMap="result">
		<![CDATA[
		SELECT CODE, NAME
		FROM SUB_CATEGORY
		WHERE CA_CODE=#{value}
		]]>
	</select>
	
	<select id="serchCourseName" parameterType="String" resultType="String">
		<![CDATA[
		SELECT NAME
		FROM COURSE
		WHERE CODE=#{value}
		]]>
	</select>
	
	<select id="serchCategoryName" parameterType="String" resultType="String">
		<![CDATA[
		SELECT NAME
		FROM CATEGORY
		WHERE CODE=#{value}
		]]>
	</select>
	
	<select id="serchSubCategoryName" parameterType="String" resultType="String">
		<![CDATA[
		SELECT NAME
		FROM SUB_CATEGORY
		WHERE CODE=#{value}
		]]>
	</select>
	
	<select id="subCategoryBelongs" parameterType="String"  resultMap="result">
		<![CDATA[
		SELECT DISTINCT CA_CODE AS CODE, CA_NAME AS NAME
		FROM VW_SEARCH_CATEGORY
		WHERE SUB_CODE=#{value}
		]]>
	</select>
	
	<select id="categoryBelongs" parameterType="String"  resultMap="result">
		<![CDATA[
		SELECT DISTINCT CO_CODE AS CODE, CO_NAME AS NAME
		FROM VW_SEARCH_CATEGORY
		WHERE CA_CODE=#{value}
		]]>
	</select>
	
	
</mapper>