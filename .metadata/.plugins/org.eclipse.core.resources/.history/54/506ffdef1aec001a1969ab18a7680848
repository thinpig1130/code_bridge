<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itperson.dao.SubCategoryDao">
	<resultMap id ="result" type="com.itperson.dto.SubCategory">
		<result property = "code" column = "CODE"/> 
		<result property = "name" column="NAME"/>
		<result property = "caCode" column="CA_CODE"/>
	</resultMap>
	
	<insert id="registCategory" parameterType="com.itperson.dto.Category">
		<![CDATA[
		INSERT INTO CATEGORY (CODE, NAME, CO_CODE)
		VALUES (#{code}, #{name}, #{coCode})
		]]>
	</insert>
	
	<select id="CategoryList" parameterType="String" resultMap="result">
		<![CDATA[
		SELECT CODE, NAME
		FROM SUB_CATEGORY
		WHERE CA_CODE=#{value}
		]]>
	</select>
	
</mapper>