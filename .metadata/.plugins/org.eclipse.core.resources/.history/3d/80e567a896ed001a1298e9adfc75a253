<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itperson.dao.StudyContentsDao">
	<resultMap id ="result" type="com.itperson.dto.StudyContents">
		<result property = "code" column = "CODE"/> 
		<result property = "name" column="NAME"/>
		<result property = "coCode" column="CO_CODE"/>
	</resultMap>
	
	<insert id="registStudyContents" parameterType="com.itperson.dto.StudyContents">
		<![CDATA[
		INSERT INTO CATEGORY (CODE, NAME, CO_CODE)
		VALUES (#{code}, #{name}, #{coCode})
		]]>
	</insert>
	
	<select id="studyContentsList" resultMap="result">
		<![CDATA[
		SELECT CODE, NAME
		FROM CATEGORY
		WHERE CO_CODE=#{value}
		]]>
	</select>
	
	<select id="serchStudyContents" parameterType="String" resultType="result">
		<![CDATA[
		SELECT 
		FROM STUDY_CONTENTS
		WHERE CODE=#{value}
		]]>
	</select>
</mapper>