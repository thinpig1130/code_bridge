<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itperson.dao.CourseDao">
	<resultMap id ="result" type="com.itperson.dto.Course">
		<result property = "code" column = "CODE"/> 
		<result property = "name" column="NAME"/>
	</resultMap>
	
	<insert id="registCourse" parameterType="com.itperson.dto.Course">
		<![CDATA[
		INSERT INTO Course (CODE, NAME)
		VALUES (#{code}, #{name})
		]]>
	</insert>
	
	<select id="courseList" resultMap="result">
		<![CDATA[
		SELECT CODE, NAME
		FROM COURSE
		]]>
	</select>
	
	<select id="courseList" parameterType="String" resultType="String">
		<![CDATA[
		SELECT NAME
		FROM COURSE
		WHERE CODE=#{value}
		]]>
	</select>
</mapper>