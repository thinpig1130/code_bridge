<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itperson.dao.FieldDao">
	<resultMap id ="result" type="com.itperson.dto.Field">
		<result property = "code" column = "CODE"/> 
		<result property = "name" column="NAME"/>
	</resultMap>

	<select id="courseList" resultMap="result">
		<![CDATA[
		SELECT CODE, NAME
		FROM COURSE;
		]]>
	</select>
	
	<select id="categoryList" resultMap="result">
		<![CDATA[
		SELECT CODE, NAME
		FROM CATEGORY;
		]]>
	</select>
	<select id="subCategoryList" resultMap="result">
		<![CDATA[
		SELECT CODE, NAME
		FROM SUB_CATEGORY;
		]]>
	</select>
	
	<select id="partOfcategoryList" parameterType="String" resultType="String">
		<![CDATA[
		SELECT CODE, NAME
		FROM CATEGORY
		WHERE CO_CODE=#{value}
		]]>
	</select>
	
	<insert id="partOfsubCategoryList" parameterType="String" resultType="String"">
		<![CDATA[
		INSERT INTO Course (CODE, NAME)
		VALUES (#{code}, #{name})
		]]>
	</insert>
</mapper>