		<result property = "correct" column = "CORRECT"/>
	</resultMap>
	
	<insert id="registQuestion" parameterType="mQuestion">
		<![CDATA[
		INSERT INTO MEMBER (ID, EMAIL, PASSWORD)
		VALUES (#{id}, #{email}, #{password})
		]]>
	</insert>
	
