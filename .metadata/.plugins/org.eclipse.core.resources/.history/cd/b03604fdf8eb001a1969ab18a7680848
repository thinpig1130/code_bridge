<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itperson.dao.CourseDao">
	<resultMap id ="result" type="com.itperson.dto.Course">
		<result property = "code" column = "CODE"/> 
		<result property = "name" column="NAME"/>
	</resultMap>
	
	<insert id="createCourse" parameterType="com.itperson.dto.Member">
		<![CDATA[
		INSERT INTO MEMBER (ID, EMAIL, PASSWORD)
		VALUES (#{id}, #{email}, #{password})
		]]>
	</insert>
	
	<select id = "listCourses" parameterType="map" resultType="String">
		<![CDATA[
		SELECT ID
		FROM MEMBER 
		WHERE ID=#{id} AND PASSWORD=#{pwd}
		]]>
	</select>
</mapper>