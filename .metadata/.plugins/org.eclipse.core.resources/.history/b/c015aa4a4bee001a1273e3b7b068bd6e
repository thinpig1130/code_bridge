<mapper namespace="com.itperson.dao.ViewStudyContentsListDao">
	<resultMap id ="result" type="com.itperson.dto.VeiwStudyContentsList">
		<result property = "coCode" column = "CODE"/> 
		<result property = "coName" column="NAME"/>
		<result property = "caCode" column="CA_CODE"/>
		<result property = "caName" column="CA_CODE"/>
		<result property = "subCode" column="CA_CODE"/>
		<result property = "subName" column="CA_CODE"/>
		<result property = "code" column="CA_CODE"/>
		<result property = "title" column="CA_CODE"/>
		<result property = "regDate" column="CA_CODE"/>
		<result property = "qCount" column="CA_CODE"/>
	</resultMap>
	
	<insert id="registSubCategory" parameterType="com.itperson.dto.SubCategory">
		<![CDATA[
		INSERT INTO SUB_CATEGORY (CODE, NAME, CA_CODE)
		VALUES (#{code}, #{name}, #{caCode})
		]]>
	</insert>
	
	<select id="subCategoryList" parameterType="String" resultMap="result">
		<![CDATA[
		SELECT CODE, NAME
		FROM SUB_CATEGORY
		WHERE CA_CODE=#{value}
		]]>
	</select>
	
	<select id="serchSubCategoryName" parameterType="String" resultType="String">
		<![CDATA[
		SELECT NAME
		FROM SUB_CATEGORY
		WHERE CODE=#{value}
		]]>
	</select>
